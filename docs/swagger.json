                "created": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "orderId": {
                    "type": "string",
                    "maxLength": 100,
                    "minLength": 1
                },
                "payments": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/order.PaymentEvent"
                    }
                },
                "status": {
